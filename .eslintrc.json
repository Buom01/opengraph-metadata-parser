{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
		"eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-undef": [
            "warn"
        ],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-trailing-spaces": [
            "error"
        ],
        "eqeqeq": [
            "error",
            "always"
        ],
        "array-bracket-spacing": [
            "error",
            "never"
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "operator-linebreak": [
            "error",
            "before"
        ],
        "curly": [
            "error",
            "multi-or-nest"
        ],
        "brace-style": [
            "error",
            "allman"
        ],
        "array-bracket-newline": [
            "error",
            { "multiline": true, "minItems": 4 }
        ],
        "array-element-newline": [
            "error",
            { "multiline": true, "minItems": 4 }
        ],
        "consistent-return": [
            "error"
        ]
    }
}
